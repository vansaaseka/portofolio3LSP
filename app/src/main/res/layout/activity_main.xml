<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_page" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/grey_top_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:padding="32dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ORDER COURSE DETAILS"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_marginTop="40dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logoherbal"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="40dp"
            android:text="Temulawak"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="100dp"
            android:text="Price"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="280dp"
            android:layout_height="25dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="100dp"
            android:text="$40"
            android:textColor="#82C3EC"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="200dp"
            android:text="Amount"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/jumlahBarang"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/editext_white"
            android:ems="10"
            android:hint="Amount"
            android:textColor="@color/black"
            android:inputType="number"
            android:padding="8dp"
            android:text="0"
            android:textColorHint="#8e8e8e"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="300dp"
            android:text="Discount"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/diskon"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="340dp"
            android:background="@drawable/editext_white"
            android:ems="10"
            android:textColor="@color/black"
            android:hint="Contoh : 50%, tulis 50"
            android:inputType="number"
            android:padding="8dp"
            android:textColorHint="#8e8e8e"
            android:textSize="18dp" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="80dp"
            android:text="PURCHASE"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:width="200dp"
            android:height="30dp"
            android:background="@drawable/color_button_background"
            android:text="CHECKOUT"
            android:textColor="#FDFCFC"
            android:textColorHint="#3F51B5" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>